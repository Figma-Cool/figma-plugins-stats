{
  "name": "figma-plugins-data",
  "version": "0.0.5",
  "description": "Fetch the latest Figma plugins meta data and stats",
  "keywords": [
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/figma-plugins-data.git"
  },
  "files": [
    "src"
  ],
  "bin": {
    "figma-plugins-data": "src/cli/cli.js"
  },
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf '*.log' data",
    "fix": "prettier-standard '{scripts,src}/**/*.js' && prettier --write '.github/**/*.yml'",
    "lint": "standard '{scripts,src}/**/*.js'",
    "scrape": "node scripts/scrape.js",
    "test": "ava --timeout 300s"
  },
  "dependencies": {
    "date-fns": "^2.11.1",
    "emoji-regex": "^8.0.0",
    "fs-extra": "^9.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "kleur": "^3.0.3",
    "npmlog": "^4.1.2",
    "sade": "^1.7.3",
    "sparkly": "^5.0.0",
    "strip-ansi": "^6.0.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "ava": "^3.5.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.2",
    "prettier-standard": "^16.2.1",
    "standard": "^14.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "prettier-standard"
    ]
  }
}
