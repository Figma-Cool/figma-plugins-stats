{
  "name": "figma-plugins-data",
  "version": "0.0.4",
  "description": "Fetch the latest Figma plugins meta data and stats",
  "keywords": [
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/figma-plugins-data.git"
  },
  "files": [
    "src"
  ],
  "main": "src/figma-plugins-data.js",
  "scripts": {
    "clean": "rm -rf '*.log' data",
    "fix": "prettier-standard 'src/**/*.js' && prettier --write '.github/**/*.yml'",
    "lint": "standard 'src/**/*.js'",
    "scrape": "node src/scrape.js"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "isomorphic-unfetch": "^3.0.0"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.2",
    "prettier-standard": "^16.2.1",
    "standard": "^14.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "prettier-standard"
    ]
  }
}
